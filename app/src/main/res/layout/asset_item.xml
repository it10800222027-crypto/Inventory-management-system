<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:padding="0dp"
    android:radius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/assetNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asset Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/assetIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asset ID: 12345"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/assetTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Laptop"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/assetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Assigned"
            android:textSize="14sp"
            android:textColor="#0E9D43"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
